{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "lib",
		"sourceMap": true,
		"declaration": true,
		"newLine": "LF",
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"stripInternal": true,
		"typeRoots": ["node_modules/@types", "solver/typings"]
	},
	"include": ["src", "solver"],
	"exclude": ["node_modules"]
}
